@model List<CreateProductDto>
@{
    ViewData["Title"] = "GetCateWithProducts";
    Layout = "_Layout";
}



<div class="body__overlay"></div>
<!-- Start Offset Wrapper -->
@if (Model?.Any() != null)
{
    <!-- End Offset Wrapper -->
    <!-- Start Bradcaump area -->
    <div class="ht__bradcaump__area" style="background: rgba(0, 0, 0, 0) url(/page/images/bg/2.jpg) no-repeat scroll center center / cover ;">
        <div class="ht__bradcaump__wrap">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="bradcaump__inner text-center">
                            <h2 class="bradcaump-title">@Model.FirstOrDefault().Category.Name</h2>
                            <nav class="bradcaump-inner">

                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- End Bradcaump area -->
    <!-- Start Our Product Area -->
    <section class="htc__product__area shop__page ptb--130 bg__white">
        <div class="container">
            <div class="htc__product__container">
                <!-- Start Product MEnu -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="filter__menu__container">

                        </div>
                    </div>
                </div>
                <!-- Start Filter Menu -->
                <!-- End Filter Menu -->
                <!-- End Product MEnu -->
                <div class="row">
                    <div class="product__list another-product-style">
                        <!-- Start Single Product -->
                        @foreach (var item in Model)
                        {
                            <div class="col-md-3 single__pro col-lg-3 cat--1 col-sm-4 col-xs-12">
                                <div class="product foo">
                                    <div class="product__inner">
                                        <div class="pro__thumb">
                                            <a asp-route-id="@item.Id" asp-action="DetailProduct">
                                                <img src="~/img/@item.Avatar" alt="product images" width="270" height="270">
                                            </a>
                                        </div>
                                        <div class="product__hover__info">
                                            <ul class="product__action">
                                                <li><a data-toggle="modal" data-target="#productModal" title="Quick View" class="quick-view modal-view detail-link" href="#"><span class="ti-plus"></span></a></li>
                                                <li><a title="Add TO Cart" href="cart.html"><span class="ti-shopping-cart"></span></a></li>
                                                <li><a title="Wishlist" href="wishlist.html"><span class="ti-heart"></span></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="product__details">
                                        <h2><a href="product-details.html">@item.Name</a></h2>
                                        <ul class="product__price">

                                            <li class="new__price">$@item.Price</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- End Single Product -->

                    </div>
                </div>
                <!-- Start Load More BTn -->
                @if (Model.Count() > 9)
                {
                    <div class="row mt--60">
                        <div class="col-md-12">
                            <div class="htc__loadmore__btn">
                                <a href="#">load more</a>
                            </div>
                        </div>
                    </div>
                }

                <!-- End Load More BTn -->
            </div>
        </div>
    </section>
}