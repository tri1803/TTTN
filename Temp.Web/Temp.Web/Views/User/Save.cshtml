@model CreateUserDto
@{
    ViewData["Title"] = "Save";
    Layout = "_AdminLayout";
}

<div class="content-header">
    <div class="container-fluid">
        <h2>Thông tin</h2>
        <div class="form-group">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Save" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UserName" class="control-label">Tên đăng nhập</label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label">Mật khẩu</label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label">Họ</label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="control-label">Tên</label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label">Số điện thoại</label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label">Hình ảnh</label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Chức vụ</label>
                                    <select class="form-control form-control-md" asp-for="RoleId">
                                        @foreach (var item in Model.Roles)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }

                                    </select>
                                </div>
                            </div>
                            </div>
                            
                            <div class="form-group">
                                
                               
                                <img src="~/images/@(Model.AvatarPath)" width="200px" height="200px" id="blah" />
                                <p></p>


                                <label asp-for="Avatar" class="control-sm-2">Hình ảnh</label>
                                <input asp-for="Avatar" class="form-control-file" type="file" required id="imgInp" />


                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <input type="submit" value="Lưu" class="btn btn-primary btn-block" />
                                </div>
                                <div class="form-group col-md-2">
                                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Trở về</a>
                                </div>
                                <div class="form-group col-md-8"></div>
                                </div>

</form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function readURL(input) {
    if (input.files && input.files[0]) {
    var reader = new FileReader();

    reader.onload = function(e) {
    $('#blah').attr('src', e.target.result);
    }

    reader.readAsDataURL(input.files[0]);
    }
    }

    $("#imgInp").change(function() {
    readURL(this);
    });
    </script>
    
}