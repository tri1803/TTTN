@model IEnumerable<ProductDto>
@using Temp.Web.Infacestructure.Helpers;
@{
    ViewBag.Title = "Index";
    Layout = "_AdminLayout";
}

<div class="content-header">
    <div class="container-fluid">
        <h1>Sản phẩm</h1>
        <div class="row mb-2 container-fluid">
            <a asp-action="Save" class="btn btn-success"><i class="fas fa-plus"></i></a>
        </div>

        <div class="row mb-2">
            <div class="container-fluid">
                <table class="table table-bordered table-hover" id="product" style="text-align:center;">
                    <thead>
                    <tr>
                        <th>Stt</th>
                        <th>Tên sản phẩm</th>
                        <th>Ảnh</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Thể loại</th>
                        <th>Nsx</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.Raw(item.Id)</td>
                            <td>@item.Name</td>
                            <td><img src="~/img/@item.Avatar" width="100" height="100"/></td>                          
                            <td>@item.Amount</td>
                            <td>$@item.Price</td>
                            <td>@item.Category.Name</td>
                            <td>@item.Nsx.Name</td>
                            <td>
                                @if (item.ProductType == (int)ProductType.Active)
                                {
                                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="InActive"><i class="fas fa-times"></i></a>
                                }
                                else
                                {
                                    <a class="btn btn-success" asp-route-id="@item.Id" asp-action="Active"><i class="fas fa-check"></i></a>
                                }
                            </td>
                            
                            <td>
                                <a asp-action="Save" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-pencil-alt"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure to delete this record?')"><i class="fas fa-times"></i></a>
                                <a class="btn btn-success"><i class="far fa-images"></i></a>
                                
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready( function () {
            $('#product').DataTable();

        } );
    </script>
}

