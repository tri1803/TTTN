@model IEnumerable<CartDetail>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2 container-fluid">
            <a asp-action="Save" class="btn btn-success"><i class="fas fa-plus"></i></a>
        </div>

        <div class="row mb-2">
            <div class="container-fluid">
                <table class="table table-bordered table-hover" id="cart" style="text-align:center;">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Product</th>
                            <th>Avata</th>
                            <th>Amount</th>
                            <th>Price</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Ship</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Product.Name</td>
                                <td><img src="~/img/@item.Product.Avatar" width="100" height="100"></td>
                                <td>@item.Amount</td>
                                <td>@(item.Amount * item.Product.Price)</td>
                                <td>@item.User.FirstName @item.User.LastName</td>
                                <td>@item.Date</td>
                                <td>
                                    @if (item.Status == (int)OrderType.NoProcess)
                                    {
                                        <a class="btn btn-warning" asp-action="Process" asp-route-id="@item.Id">@OrderType.NoProcess</a>
                                    }
                                    else if (item.Status == (int)OrderType.Processing)
                                    {
                                        <a class="btn btn-info" asp-action="Done" asp-route-id="@item.Id">@OrderType.Processing</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-success" style="color:snow;">@OrderType.Done</a>
                                    }

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#cart').DataTable({
            });

        });
    </script>
}


